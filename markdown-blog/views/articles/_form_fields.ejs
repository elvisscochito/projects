<div class="form-group mb-4">
    <label for="title">Title:</label>
    <input type="text" class="form-control" id="title" name="title" value="<%= article.title %>" required>
</div>

<div class="form-group mb-4">
    <label for="description">Description:</label>
    <textarea class="form-control" id="description" name="description" required><%= article.description %></textarea>
</div>

<div class="form-group mb-4">
    <label for="title">Markdown:</label>
    <textarea class="form-control" id="markdown" name="markdown" required><%= article.markdown %></textarea>
</div>

